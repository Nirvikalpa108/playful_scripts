#! /usr/bin/python
import sys
import socket

if len(sys.argv) == 2:
    port = int(sys.argv[1])
    s = socket.socket()
    s.bind(('0.0.0.0', port))
    s.listen(1)
    connection, address = s.accept()
    while True:
        data = connection.recv(1024)
        if not data: 
            break
        connection.sendall(data)
    connection.close()
else:
    print('please give me something like `anetecho 5000`')

# accept programme name and port number arguments
# start listening on that port
# read the request
# send a copy of that request to the client 